<p id = "micro_post_<% micro_post.id %>">
	<span class='micro_post_timestamp'>
		<%= micro_post.created_at.strftime("%m/%d %l-%M") %>
	</span> 
   
    <%= image_tag(micro_post.user.avatar_url(:thumbnail)) if micro_post.user.avatar_url %>
   
	<%= micro_post.content %>
	<% if signed_in? && micro_post.user == current_user %>
		<%= link_to 'Destroy', micro_post,
							method: :delete,
							remote: true,
							data: { confirm: 'Are you sure?' } %>
	<% end %>
</p>