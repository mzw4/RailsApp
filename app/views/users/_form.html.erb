<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  
  <div class="field">
  <% if @user.avatar_url %>
  <%= image_tag(@user.avatar_url(:thumbnail)) %> <br/>
  <%= f.check_box :remove_avatar %>
  <%= f.label :remove_avatar %> <br/>
  <% end %>
  <%= f.file_field(:avatar) %>
  <%= f.hidden_field(:avatar_cache) %>
  </div>

  <div class="field">
  <%= f.label :password %><br />
  <%= f.password_field :password %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
